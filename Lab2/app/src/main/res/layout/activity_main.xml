<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_50"
        android:textColor="@color/black"
        android:text="@string/txt_name"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/distance_40"
        android:textSize="@dimen/text_size"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="@dimen/distance_40"
        android:layout_marginTop="@dimen/distance_40"
        android:ems="10"
        android:inputType="" />

    <TextView
        android:id="@+id/salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="@dimen/distance_50"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/distance_40"
        android:text="@string/txt_salary"
        android:textStyle="bold"
        android:textSize="@dimen/text_size"/>

    <EditText
        android:id="@+id/et_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="@dimen/distance_40"
        android:layout_marginTop="@dimen/distance_40"
        android:ems="10"
        android:inputType="" />

    <Button
        android:id="@+id/btn_Calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_salary"
        android:layout_marginTop="@dimen/text_size"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_calc" />

    <ListView
        android:id="@+id/list_Staff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/distance_40"
        android:layout_below="@+id/btn_Calc"/>

</RelativeLayout>